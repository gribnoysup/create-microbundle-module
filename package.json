{
  "name": "create-microbundle-module",
  "private": true,
  "scripts": {
    "lint-staged": "lint-staged",
    "prettier": "prettier",
    "eslint": "eslint",
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "all:exec": "lerna exec --",
    "all:publish": "lerna publish",
    "all:add": "lerna add"
  },
  "author": "Sergey Petushkov <petushkov.sergey@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^5.0.1",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.0",
    "lerna": "^3.0.0-beta.21",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "npm run eslint -- --fix",
        "npm run prettier -- --write",
        "git add"
      ],
      "*.{md,json}": [
        "npm run prettier -- --write",
        "git add"
      ]
    },
    "ignore": [
      "**/package-lock.json",
      "**/dist/**"
    ]
  },
  "engines": {
    "node": ">=6.12.0"
  }
}
